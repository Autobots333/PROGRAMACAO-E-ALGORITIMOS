Jogo da Forca - Tema: Personagens de Naruto

#include <iostream>
#include <ctime>
#include <cstdlib>


int aleatorio(){
	int n = std::rand()%16;
	return n;

}

void imprimeForca(int n){
	system("cls"); 
	std::cout << "                                                        === FORCA ===\n";
	
	if(n == 0){
	std::cout <<  " _______\n";
	std::cout << "|/      \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	}

	if(n == 1){
	std::cout <<  " _______\n";
	std::cout << "|/      |\n";
	std::cout << "|       O\n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	}
	
	
	if(n == 2){
	std::cout <<  " _______\n";
	std::cout << "|/      |\n";
	std::cout << "|       O\n";
	std::cout << "|       |\n";
	std::cout << "|       |\n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	}
	

	if(n == 3){
	std::cout <<  " _______\n";
	std::cout << "|/      |\n";
	std::cout << "|       O\n";
	std::cout << "|      /|\\\n";
	std::cout << "|       |\n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	
	}
	

	if(n == 4){
	std::cout <<  " _______\n";
	std::cout << "|/      |\n";
	std::cout << "|       O\n";
	std::cout << "|      /|\\\n";
	std::cout << "|       |\n";
	std::cout << "|      /  \n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	}
	

	if(n == 5){
	std::cout <<  " _______\n";
	std::cout << "|/      |\n";
	std::cout << "|       O\n";
	std::cout << "|      /|\\\n";
	std::cout << "|       |\n";
	std::cout << "|      / \\\n";
	std::cout << "|       \n";
	std::cout << "|       \n";
	}	
}

int main(int argc, char** argv) {
	std::srand(time(0));
	int numale, estagioforca;

	numale = aleatorio();
	
	char palavras[16][30] = {
     	"NARUTO",
		"KAKASHI",
		"KABUTO",
		"SASUKE",
		"SHISUI",
		"ITACHI",
        "MINATO",
		"HASHIRAMA",
		"MEI",
		"KILLER BEE",
		"SHINO",
        "HIRUZEN",
		"TSUNADE",
		"OROCHIMARU",
		"DARUI",
		"HIDAN"
	};
	char* palavraEscolhida = palavras[numale];
	
    int tamanho = 0;
    while (palavraEscolhida[tamanho] != '\0') tamanho++;
    
    char progresso[30];
    for (int i = 0; i < tamanho; i++) {
        progresso[i] = '_';
    }
	
	int erros = 0;
    const int maxErros = 5;
	

    char letrasChutadas[26]; 
    int qtdLetras = 0;

    
    while (erros <= maxErros) {
        imprimeForca(erros);

        std::cout << "\nPalavra: ";
        for (int i = 0; i < tamanho; i++) {
            std::cout << progresso[i] << " ";
        }
        std::cout << "\n";

        if(qtdLetras > 0){
            std::cout << "Letras chutadas: ";
            for(int i=0; i<qtdLetras; i++){
                std::cout << letrasChutadas[i] << " ";
            }
            std::cout << "\n";
        }


    char chute;
    std::cout << "Digite uma letra: ";
    std::cin >> chute;

        letrasChutadas[qtdLetras] = chute;
        qtdLetras++;
		

        bool venceu = true;
        for (int i = 0; i < tamanho; i++) {
            if (progresso[i] == '_') {
                venceu = false;
                break;
            }
        }
        if (venceu) {
            std::cout << "\nVoce acertou a palavra: " << palavraEscolhida << "\n";
            break;
        }
	

        bool achou = false;
        for (int i = 0; i < tamanho; i++) {
            if (palavraEscolhida[i] == chute) { 
                progresso[i] = palavraEscolhida[i];
                achou = true;
            }
        }

        if (!achou) {
            erros++; 
        }

        if (erros > maxErros) {
            imprimeForca(maxErros);
            std::cout << "\nVoce errou a palavra : " << palavraEscolhida << "\n";
            break;
        }
    }

    return 0;
}
