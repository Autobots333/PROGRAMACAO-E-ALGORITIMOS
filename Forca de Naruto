Jogo da Forca - Tema: Personagens de Naruto
#include <iostream>
#include <string>
#include <vector>

using namespace std;

void mostrarPalavra(const string& palavra, const vector<bool>& letrasDescobertas) {
    for (size_t i = 0; i < palavra.size(); i++) {
        if (letrasDescobertas[i]) {
            cout << palavra[i] << " ";
        } else {
            cout << "_ ";
        }
    }
    cout << endl;
}

bool verificarLetra(char letra, const string& palavra, vector<bool>& letrasDescobertas) {
    bool letraEncontrada = false;
    for (size_t i = 0; i < palavra.size(); i++) {
        if (palavra[i] == letra && !letrasDescobertas[i]) {
            letrasDescobertas[i] = true;
            letraEncontrada = true;
        }
    }
    return letraEncontrada;
}

int main() {
    string palavra = "tobirama";
    vector<bool> letrasDescobertas(palavra.size(), false);
    int tentativas = 6;
    string letraTentada;

    cout << "Bem-vindo ao Jogo da Forca!" << endl;

    while (tentativas > 0) {
        cout << "Você tem " << tentativas << " tentativas restantes." << endl;
        mostrarPalavra(palavra, letrasDescobertas);

        cout << "Digite uma letra: ";
        cin >> letraTentada;
        
        if (letraTentada.length() != 1) {
            cout << "Por favor, digite apenas uma letra!" << endl;
            continue;
        }

        if (verificarLetra(letraTentada[0], palavra, letrasDescobertas)) {
            cout << "Boa! A letra " << letraTentada << " está na palavra." << endl;
        } else {
            tentativas--;
            cout << "A letra " << letraTentada << " não está na palavra." << endl;
        }

       
        bool ganhou = true;
        for (size_t i = 0; i < palavra.size(); i++) {
            if (!letrasDescobertas[i]) {
                ganhou = false;
                break;
            }
        }

        if (ganhou) {
            cout << "Parabéns! Você descobriu a palavra: " << palavra << endl;
            break;
        }
    }

    if (tentativas == 0) {
        cout << "Você perdeu! A palavra era: " << palavra << endl;
    }

    return 0;
}
